<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".dashboard.Documents">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="82dp"
        android:orientation="vertical"

        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">



        <EditText
            android:id="@+id/company_serch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/company"
            android:drawablePadding="5dp"
            android:hint="Company Name "
            android:inputType="textPersonName"
            android:padding="10dp" />




        <EditText
            android:id="@+id/document_sendername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="5dp"
            android:hint="Email ID"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageButton
            android:id="@+id/image_upload"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:drawablePadding="20dp"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/ic_attach_file_black_24dp" />

            <TextView

                android:id="@+id/notification"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="No file Selected"
                android:textSize="18sp"
                />

       </LinearLayout>

     <EditText
            android:id="@+id/comment_admin"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round"

            android:gravity="top|left"
            android:hint="Enter the Comment"
            android:inputType="textMultiLine"
            android:fontFamily="sans-serif"

            />



        <Button
            android:id="@+id/document_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:text="Sumitt" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Document"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>